﻿﻿﻿<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Authentication Fragments -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookstore.ui.fragments.LoginFragment"
        android:label="Sign In">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.bookstore.ui.fragments.RegisterFragment"
        android:label="Sign Up">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.bookstore.ui.fragments.ForgotPasswordFragment"
        android:label="Reset Password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Main App Fragments -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bookstore.ui.fragments.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.bookstore.ui.fragments.CatalogFragment"
        android:label="Catalog">
        <action
            android:id="@+id/action_catalogFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.bookstore.ui.fragments.BookDetailFragment"
        android:label="Book Details" />

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.bookstore.ui.fragments.CartFragment"
        android:label="Cart">
        <action
            android:id="@+id/action_cartFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
        <action
            android:id="@+id/action_cartFragment_to_catalogFragment"
            app:destination="@id/catalogFragment" />
    </fragment>

    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.bookstore.ui.fragments.CheckoutFragment"
        android:label="Checkout">
        <action
            android:id="@+id/action_checkoutFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:popUpTo="@id/cartFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bookstore.ui.fragments.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addressFragment"
            app:destination="@id/addressFragment" />
    </fragment>

    <fragment
        android:id="@+id/addressFragment"
        android:name="com.example.bookstore.ui.fragments.AddressFragment"
        android:label="Manage Addresses" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.bookstore.ui.fragments.SearchFragment"
        android:label="Search" />

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.bookstore.ui.fragments.CategoryFragment"
        android:label="Categories" />

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.bookstore.ui.fragments.OrdersFragment"
        android:label="My Orders">
        <action
            android:id="@+id/action_ordersFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
        android:name="com.example.bookstore.ui.fragments.OrderDetailFragment"
        android:label="Order Details" />

    <!-- Admin Fragments -->
    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.bookstore.ui.fragments.AdminDashboardFragment"
        android:label="Admin Dashboard">
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminProductsFragment"
            app:destination="@id/adminProductsFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminOrdersFragment"
            app:destination="@id/adminOrdersFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminCustomersFragment"
            app:destination="@id/adminCustomersFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/adminDashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/adminProductsFragment"
        android:name="com.example.bookstore.ui.fragments.AdminProductsFragment"
        android:label="Product Management">
        <action
            android:id="@+id/action_adminProductsFragment_to_adminEditProductFragment"
            app:destination="@id/adminEditProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminEditProductFragment"
        android:name="com.example.bookstore.ui.fragments.AdminEditProductFragment"
        android:label="Edit Product" />

    <fragment
        android:id="@+id/adminOrdersFragment"
        android:name="com.example.bookstore.ui.fragments.AdminOrdersFragment"
        android:label="Order Management">
        <action
            android:id="@+id/action_adminOrdersFragment_to_orderDetailFragment"
            app:destination="@id/orderDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminCustomersFragment"
        android:name="com.example.bookstore.ui.fragments.AdminCustomersFragment"
        android:label="Customer Management">
        <action
            android:id="@+id/action_adminCustomersFragment_to_adminCustomerDetailFragment"
            app:destination="@id/adminCustomerDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminCustomerDetailFragment"
        android:name="com.example.bookstore.ui.fragments.AdminCustomerDetailFragment"
        android:label="Customer Details" />
</navigation>
